            background: transparent;
        }

        .tab-pane {
            position: relative;
            padding-top: 50px;
        }

        .tab-content .head {
            font-family: 'Roboto Condensed', sans-serif;
            font-size: 25px;
            text-transform: uppercase;
            padding-bottom: 10px;
        }

