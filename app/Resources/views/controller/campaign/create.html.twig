{% block content %}
<div class="container">
    <div class="row">
        <div class="col-md-12">
                <ul class="nav nav-tabs" id="myTab">
                    <div class="liner"></div>

                    <li class="active">
                        <a href="#schedule" data-toggle="tab" title="Select campaign schedule">
                         <span class="round-tabs four">
                              <i class="glyphicon glyphicon-calendar"></i>
                         </span>
                        </a></li>

                    <li>
                        <a href="#message" data-toggle="tab" title="Craft message">
                      <span class="round-tabs one">
                              <i class="glyphicon glyphicon-envelope"></i>
                      </span>
                        </a></li>

                    <li><a href="#influencers" data-toggle="tab" title="Select influencers">
                     <span class="round-tabs two">
                         <i class="glyphicon glyphicon-user"></i>
                     </span>
                        </a>
                    </li>
                    <li><a href="#reward-type" data-toggle="tab" title="Select reward type">
                     <span class="round-tabs three">
                          <i class="glyphicon glyphicon-gift"></i>
                     </span> </a>
                    </li>

                    <li><a href="#done" data-toggle="tab" title="completed">
                         <span class="round-tabs five">
                              <i class="glyphicon glyphicon-ok"></i>
                         </span> </a>
                    </li>

                </ul>
               </div>
            </div>
<div class="row">
        <div class="col-md-12">
            <div class="tab-content">
                <div class="tab-pane fade" id="message">

                    <div class="row">
                        <div class="col-md-10 col-md-offset-1">
                            <div class="well well-sm">
                                <form class="form-horizontal" action="" method="post">
                                    <fieldset>
                                        <legend class="text-center">Message for Influencers</legend>

                                        <!-- Name input-->
                                        <div class="form-group">
                                            <label class="col-md-3 control-label" for="name">Subject</label>
                                            <div class="col-md-9">
                                                <input id="subject" name="subject" type="text"
                                                       placeholder="Subject Line" class="form-control">
                                            </div>
                                        </div>


                                        <!-- Message body -->
                                        <div class="form-group">
                                            <label class="col-md-3 control-label" id="mBody" for="message">Message
                                                Body</label>
                                            <div class="col-md-9">
                                                <textarea class="form-control" id="message" name="body"
                                                          placeholder="Please enter your message here..."
                                                          rows="5"></textarea>
                                            </div>
                                        </div>

                                        <!-- Form actions -->
                                        <div class="form-group">
                                            <div class="col-md-12 text-right">
                                                <p class="text-center">
                                                    <a href="#influencers" id="mailSent"
                                                           class="btn btn-success btn-outline-rounded green next-button">
                                                           Next: Select Influencers
                                                          </a>
                                                </p>


                                            </div>
                                        </div>
                                    </fieldset>
                                </form>
                            </div>
                        </div>
                    </div>


                </div>


                <div class="tab-pane fade" id="influencers">


                    <h3 class="head text-center">Select Influencers for Campaign</h3>

                    <p class="text-center ">
                    <div class="col-md-12">
                        <div class="checkbox">
                            <label><input type="checkbox" value="">@himalisehgal</label>
                        </div>
                        <div class="checkbox">
                            <label><input type="checkbox" value="">@vivekranjan</label>
                        </div>
                        <div class="checkbox disabled">
                            <label><input type="checkbox" value="" disabled>@nikeshmasiwal</label>
                        </div>

                    </div>


                    </p>

                    <p>
                        <a href="#reward-type" class="btn btn-success btn-outline-rounded green next-button">
                            Next: Select Reward Type
                        </a>
                    </p>

                </div>
                <div class="tab-pane fade" id="reward-type">
                    <h3 class="head text-center">Reward Type</h3>
                    <p class="narrow text-center">
                        List down the Barters that the influencers will be eligible to get after completing the
                        assignment
                    </p>


                </div>
                <div class="tab-pane fade in active" id="schedule">
                    <h3 class="head text-center">Select Campaign Dates</h3>
                    <p class="narrow text-center">

                        <label for="from">From</label>
                        <input type="text" id="from" name="from" class="form-control">
                        <label for="to">to</label>
                        <input type="text" id="to" name="to" class="form-control">

                    </p>

                    <p class="text-center">
                        <a href="#message" class="btn btn-success btn-outline-rounded green next-button"
                         data-next-step="message">
                         Next: Draft Message</a>
                    </p>
                </div>
                <div class="tab-pane fade" id="done">
                    <div class="text-center">
                        <i class="img-intro icon-checkmark-circle"></i>
                    </div>
                    <h3 class="head text-center">DONE ! YOUR Campaign is Live for Influencers <span
                                style="color:#f48260;">♥</span> Bootstrap</h3>
                    <p class="narrow text-center">

                        Any communication will be displayed here.


                    </p>
                </div>
               </div>
               </div>
              </div>
{% endblock %}
