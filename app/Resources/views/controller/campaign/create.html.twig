{% block stylesheetsCustom %}
    <link rel="stylesheet" href="{{ asset('styles/daterangepicker.css') }}"/>
    <style type="text/css">

        p.narrow {
            width: 60%;
            margin: 10px auto;
        }

        .liner {
            height: 2px;
            background: #ddd;
            position: absolute;
            left: 0;
            right: 0;
            top: 50%;
            z-index: 1;
        }

        .nav-tabs > li.active > a, .nav-tabs > li.active > a:hover, .nav-tabs > li.active > a:focus {
            color: #555555;
            cursor: default;
            border: 0;
            border-bottom-color: transparent;
        }

        span.round-tabs {
            width: 70px;
            height: 70px;
            line-height: 70px;
            display: inline-block;
            border-radius: 100px;
            background: white;
            z-index: 2;
            position: absolute;
            left: 0;
            text-align: center;
            font-size: 25px;
        }

        span.round-tabs.one {
            color: rgb(34, 194, 34);
            border: 2px solid rgb(34, 194, 34);
        }

        li.active span.round-tabs.one {
            background: #fff !important;
            border: 2px solid #ddd;
            color: rgb(34, 194, 34);
        }

        span.round-tabs.two {
            color: #febe29;
            border: 2px solid #febe29;
        }

        li.active span.round-tabs.two {
            background: #fff !important;
            border: 2px solid #ddd;
            color: #febe29;
        }

        span.round-tabs.three {
            color: #3e5e9a;
            border: 2px solid #3e5e9a;
        }

        li.active span.round-tabs.three {
            background: #fff !important;
            border: 2px solid #ddd;
            color: #3e5e9a;
        }

        span.round-tabs.four {
            color: #f1685e;
            border: 2px solid #f1685e;
        }

        li.active span.round-tabs.four {
            background: #fff !important;
            border: 2px solid #ddd;
            color: #f1685e;
        }

        span.round-tabs.five {
            color: #999;
            border: 2px solid #999;
        }

        li.active span.round-tabs.five {
            background: #fff !important;
            border: 2px solid #ddd;
            color: #999;
        }

        .nav-tabs > li.active > a span.round-tabs {
            background: #fafafa;
        }

        .nav-tabs > li {
            width: 16.6%;
        }

        .nav-tabs > li a {
            width: 70px;
            height: 70px;
            margin: 20px 30px;
            border-radius: 100%;
            padding: 0;
        }

        .nav-tabs > li a:hover {
            background: transparent;
        }

        .tab-pane {
            position: relative;
            padding-top: 50px;
        }

        .tab-content .head {
            font-family: 'Roboto Condensed', sans-serif;
            font-size: 25px;
            text-transform: uppercase;
            padding-bottom: 10px;
        }

        .btn-outline-rounded {
            padding: 10px 40px;
            margin: 20px 0;
            border: 2px solid transparent;
            border-radius: 25px;
        }

        .btn.green {
            background-color: #5cb85c;
            /*border: 2px solid #5cb85c;*/
            color: #ffffff;
        }

        #myTab.nav-tabs > li > a, #myTab.nav-tabs > li.active > a {
            background-color: transparent;
            margin-right: 0;
            border: 0;
        }

        #myTab {
            background-color: transparent;
            margin: 0;
            padding: 0;
            border: 0;
        }

        i.glyphicon {margin-right:0;}

        @media ( max-width: 585px ) {

            span.round-tabs {
                font-size: 16px;
                width: 50px;
                height: 50px;
                line-height: 50px;
            }

            .tab-content .head {
                font-size: 20px;
            }

            .nav-tabs > li a {
                width: 50px;
                height: 50px;
                line-height: 50px;
            }

            li.active:after {
                content: " ";
                position: absolute;
                left: 35%;
            }

            .btn-outline-rounded {
                padding: 12px 20px;
            }

            label {
                font-size: larger;
            }

            #influencers > div > div > div > div.panel-body > div > div {
                background-size: cover;
                min-height: 300px;
                height: 300px;
                color: #FFFFFF;
            }

            #influencers > div > div > div > div.panel-body > div > div > div.panel-body > div > div > p {
                color: #FFFFFF;
            }

        }
    </style>
{% endblock %}
{% block content %}
<div class="container">
    <div class="row">
        <div class="col-md-12">
                <ul class="nav nav-tabs" id="myTab">
                    <div class="liner"></div>

                    <li class="active">
                        <a href="#schedule" data-toggle="tab" title="Select campaign schedule">
                         <span class="round-tabs one">
                              <i class="glyphicon glyphicon-calendar"></i>
                         </span>
                        </a>
                    </li>
                    <li>
                        <a href="#brief" data-toggle="tab" title="Campaign brief">
                         <span class="round-tabs two">
                              <i class="glyphicon glyphicon-tasks"></i>
                         </span>
                        </a>
                    </li>
                    <li>
                        <a href="#reward-type" data-toggle="tab" title="Select reward type">
                             <span class="round-tabs five">
                                  <i class="glyphicon glyphicon-gift"></i>
                             </span>
                        </a>
                    </li>
                    <li>
                        <a href="#influencers" data-toggle="tab" title="Select influencers">
                         <span class="round-tabs four">
                             <i class="glyphicon glyphicon-user"></i>
                         </span>
                        </a>
                    </li>
                    <li>
                        <a href="#message" data-toggle="tab" title="Draft message">
                          <span class="round-tabs three">
                                  <i class="glyphicon glyphicon-envelope"></i>
                          </span>
                        </a>
                    </li>
                    <li><a href="#done" data-toggle="tab" title="completed">
                         <span class="round-tabs six">
                              <i class="glyphicon glyphicon-ok"></i>
                         </span> </a>
                    </li>

                </ul>
               </div>
            </div>
<div class="row">
        <div class="col-md-12">
            <div class="tab-content">

                <div class="tab-pane fade in active" id="schedule">

                    <div class="row">
                        <div class="col-md-10 col-md-offset-1">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title">Campaign name &amp; schedule</h3>
                                </div>
                                <div class="panel-body">
                                    <div class="form-group">
                                        <label for="campaign-name">Give your campaign a name</label>
                                        <div class="input-group">
                                            <div class="input-group-addon"><span class="ion-bookmark"></span></div>
                                            <input type="text" id="campaign-name" name="campaign-name" class="form-control"
                                             placeholder="Campaign name"/>
                                        </div>
                                     </div>
                                     <div class="form-group">
                                        <label for="schedule-input">Campaign start and end dates</label>
                                        <div class="input-group">
                                            <div class="input-group-addon"><span class="ion-calendar"></span></div>
                                            <input type="text" id="schedule-input" name="schedule-input" class="form-control"
                                                size="30"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="panel-footer">
                                    <div class="form-group">
                                        <a href="#brief" class="btn btn-success next-button"
                                         data-next-step="brief"
                                         data-toggle="tab">
                                         Next: Campaign brief</a>
                                    </div>
                                </div>
                            </div>
                         </div>
                    </div>
                </div>

                <div class="tab-pane fade" id="brief">

                    <div class="row">
                        <div class="col-md-10 col-md-offset-1">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title">Campaign Brief</h3>
                                </div>
                                <div class="panel-body">
                                    <div class="form-group">
                                        <label for="brief-description">Write down your brief</label>
                                        <textarea id="brief-description" class="form-control"></textarea>
                                        <small class="help-block">
                                            Give a quick description for your campaign. You can add deliverables and receivables
                                             later.
                                        </small>
                                        <span class="help-block" id="char-counter">
                                            1500 characters remaining
                                        </span>
                                    </div>
                                </div>
                                <div class="panel-heading">
                                    <h3 class="panel-title">Other important information</h3> (optional)
                                </div>
                                <div class="panel-body">
                                    <div class="form-group">
                                        <label for="posts-count">Number of posts</label>
                                        <div class="input-group col-md-5">
                                            <div class="input-group-addon">At least</div>
                                            <input type="number" class="form-control" min="1" size="3"
                                               id="posts-count" name="posts-count" value="1" />
                                            <div class="input-group-addon">post(s)</div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="handles">Posts should include the following handles</label>
                                        <div class="input-group">
                                            <div class="input-group-addon"><span class="ion-at"></span></div>
                                            <input type="text" class="form-control" id="handles" name="handles" />
                                        </div>
                                        <small class="help-block">Separate multiple handles with comma or space</small>
                                    </div>
                                    <div class="form-group">
                                        <label for="hashtags">Posts should include the following hashtags</label>
                                        <div class="input-group">
                                            <div class="input-group-addon"><span class="ion-pound"></span></div>
                                            <input type="text" class="form-control" id="hashtags" name="hashtags" />
                                        </div>
                                        <small class="help-block">Separate multiple hashtags with comma or space</small>
                                    </div>
                                    <div class="form-group">
                                        <label for="include-text">Posts should include the following text</label>
                                        <div class="input-group">
                                            <div class="input-group-addon"><span class="ion-document-text"></span></div>
                                            <input type="text" class="form-control" id="include-text" name="include-text" />
                                        </div>
                                    </div>
                                </div>
                                <div class="panel-footer">
                                    <div class="form-group">
                                        <a href="#reward-type" class="btn btn-success next-button"
                                         data-next-step="reward-type"
                                         data-toggle="tab">
                                         Next: Select Rewards</a>
                                        <a href="#schedule" class="pull-right btn btn-link next-button"
                                         data-toggle="tab">
                                            Previous: Campaign name &amp; schedule
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="tab-pane fade" id="reward-type">

                    <div class="row">
                        <div class="col-md-10 col-md-offset-1">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title">Rewards</h3>
                                </div>
                                <div class="panel-body">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <button class="btn btn-primary btn-block" data-toggle="collapse"
                                                data-target="#cash-details">
                                                <span class="ion-cash"></span> Cash
                                            </button>
                                        </div>
                                        <div class="form-group collapse" id="cash-details">
                                            <div class="input-group">
                                                <div class="input-group-addon">&#x20B9;</div>
                                                <input type="number" class="form-control" id="cash-amount"
                                                    min="0" placeholder="Amount to be paid" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <button class="btn btn-primary btn-block"
                                                data-toggle="collapse" data-target="#kind-details">
                                                <span class="ion-cube"></span> Kind
                                            </button>
                                        </div>
                                        <div class="form-group">
                                            <textarea class="collapse form-control" id="kind-details" rows="6"
                                                placeholder="Details for products or other things to be given out"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="panel-footer">
                                    <div class="form-group">
                                        <a href="#influencers" class="btn btn-success next-button"
                                         data-next-step="influencers"
                                         data-toggle="tab">
                                         Next: Select influencers</a>
                                        <a href="#brief" class="pull-right btn btn-link next-button"
                                         data-toggle="tab">
                                            Previous: Campaign brief
                                        </a>
                                    </div>
                                </div>
                            </div>
                         </div>
                    </div>
                </div>

                <div class="tab-pane fade" id="influencers">
                    <div class="row">
                        <div class="col-md-10 col-md-offset-1">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title">Select influencers</h3>
                                </div>
                                <div class="panel-body">
                                    {% for influencer in influencers %}
                                    <div class="col-md-3">
                                        <div class="panel panel-default influencer-box">
                                            <div class="panel-body"
                                                style="background:linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.3)),
                                                                    url('{{ profilePictures[loop.index-1] }}')
                                                                    no-repeat;
                                                        background-size: cover;">
                                                 <h4 class="panel-title white">@{{ influencer.username }}</h4>
                                                {#<div class="row">
                                                    <img src="{{ profilePictures[loop.index-1] }}"
                                                       width="100%"/>
                                                </div>#}
                                                <div class="row mt">
                                                    <div class="col-md-12">
                                                        <p class="white"><span class="ion-eye white"></span>&nbsp;&nbsp;500</p>
                                                    </div>
                                                </div>
                                                <button class="btn btn-block btn-primary selection">
                                                    <span class="ion-checkmark"></span>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                    {% endfor %}
                                </div>
                                <div class="panel-footer">
                                    <div class="form-group">
                                        <a href="#message" class="btn btn-success next-button"
                                         data-next-step="message"
                                         data-toggle="tab">
                                            Next: Draft Message
                                         </a>
                                        <a href="#reward-type" class="pull-right btn btn-link next-button"
                                         data-toggle="tab">
                                            Previous: Select rewards
                                        </a>
                                    </div>
                                </div>
                            </div>
                         </div>
                    </div>
                </div>

                <div class="tab-pane fade" id="message">

                    <div class="row">
                        <div class="col-md-10 col-md-offset-1">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title">Draft Message for Influencers</h3>
                                </div>
                                <div class="panel-body">
                                    <!-- Name input-->
                                    <div class="form-group">
                                        <label class="control-label" for="name">Subject</label>
                                        <input id="subject" name="subject" type="text"
                                               placeholder="Subject Line" class="form-control"
                                               value="Invitation to collaborate">
                                    </div>

                                    <!-- Message body -->
                                    <div class="form-group hidden" id="message-form-group">
                                        <label id="mBody" for="message-body">Message Body</label>
                                        <textarea class="form-control" id="message-body" name="body"
                                                      placeholder="Please enter your message here..."
                                                      rows="5"></textarea>
                                    </div>
                                </div>
                                <div class="panel-footer">
                                    <!-- Form actions -->
                                    <div class="form-group">
                                        <a href="#done" id="mailSent"
                                               class="btn btn-success btn-lg next-button"
                                               data-toggle="tab">
                                               Create Campaign!
                                        </a>
                                        <a href="#influencers"
                                            data-toggle="tab"
                                            class="btn btn-link pull-right">
                                            Previous: Select Influencers
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="tab-pane fade" id="done">
                    <div class="text-center">
                        <i class="img-intro icon-checkmark-circle"></i>
                    </div>
                    <h3 class="head text-center">DONE ! YOUR Campaign is Live for Influencers <span
                                style="color:#f48260;">♥</span> Bootstrap</h3>
                    <p class="narrow text-center">

                        Any communication will be displayed here.


                    </p>
                </div>
               </div>
               </div>
              </div>
{% endblock %}
{% block javascriptDataMain %}"{{ asset('scripts/campaign-create-main.js') }}"{% endblock %}
{% block javascriptsDist %} <script type="text/javascript" src="{{ asset('scripts/campaign-create-main.js') }}"></script>{% endblock %}