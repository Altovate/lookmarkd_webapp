{% extends 'dashboard-base.html.twig' %}

{% block title %}Settings{% endblock %}
{% block stylesheetsCustom %}
<link rel="stylesheet" href="{{ asset('styles/toastr.min.css') }}" />
{% endblock %}
{% block stylesheetsDist %}
<style type="text/css">
</style>
<script>
    (function(u){function loadCSS(e,t,n){"use strict";function r(){for(var t,i=0;i<d.length;i++)d[i].href&&d[i].href.indexOf(e)>-1&&(t=!0);t?o.media=n||"all":setTimeout(r)}var o=window.document.createElement("link"),i=t||window.document.getElementsByTagName("script")[0],d=window.document.styleSheets;return o.rel="stylesheet",o.href=e,o.media="only x",i.parentNode.insertBefore(o,i),r(),o}for(var i in u){loadCSS(u[i]);}}(["{{ asset('styles/main.css') }}","{{ asset('styles/dashboard-style.css') }}","{{ asset('styles/style-responsive.css') }}","{{ asset('styles/toastr.min.css') }}"]));
</script>
<noscript>
	<link rel="stylesheet" href="{{ asset('styles/main.css') }}">
	<link rel="stylesheet" href="{{ asset('dashboard-style/style.css') }}" />
	<link rel="stylesheet" href="{{ asset('styles/style-responsive.css') }}" />
	<link rel="stylesheet" href="{{ asset('styles/toastr.min.css') }}" />
</noscript>
{% endblock stylesheetsDist %} 

{% block content %} 
<div class="row mt">
	<div class="col-lg-12">
		<h2>Settings</h2>
	</div>
</div>
<div class="row mt">
	<div class="col-lg-12">
		<h3>Email</h3>
	</div>
</div>
{% for pref in userPreferences %}
<div class="row mt">
	<div class="col-lg-offset-1 col-lg-6">
		<label for="{{ pref.preferenceType.preferenceKey }}">
			{{ pref.preferenceType.description }}
		</label>
	</div>
	<div class="col-lg-2">
		<input type="checkbox" name="{{ pref.preferenceType.preferenceKey }}"
			data-pref-id="{{ pref.preferenceType.id }}"
			class="pref-checkbox"
			data-set-pref-url="{{ url('set_user_pref', {'prefKey':pref.preferenceType.preferenceKey, 'value':'1'}) }}"
			{% if pref.value==1 %}checked="checked"{% endif %}/>
	</div>
</div>
{% endfor %}
{% endblock %} 

{%
block javascriptDataMain %}"{{
asset('scripts/userpreferences-settings-main.js') }}"{% endblock %} {%
block javascriptsDist %}
<script type="text/javascript"
	src="{{ asset('scripts/userpreferences-settings-main.js') }}"></script>
{% endblock %}
